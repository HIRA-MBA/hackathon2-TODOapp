# Docker Compose Environment Variables
# Copy this file to .env and fill in your actual values

# Database connection (Neon PostgreSQL) - Backend uses asyncpg
DATABASE_URL=postgresql+asyncpg://user:password@host:5432/dbname?sslmode=require

# Database connection (Neon PostgreSQL) - Frontend uses standard pg
FRONTEND_DATABASE_URL=postgresql://user:password@host:5432/dbname?sslmode=require

# Better Auth shared secret (must match frontend BETTER_AUTH_SECRET)
# Generate with: openssl rand -hex 32
BETTER_AUTH_SECRET=your-secret-key-min-32-characters-long

# JWT Secret for WebSocket authentication
# Generate with: openssl rand -hex 32
JWT_SECRET=your-jwt-secret-here

# OpenAI API Key (optional, for chatbot features)
OPENAI_API_KEY=sk-proj-your-openai-api-key

# MCP Default User ID (for testing without auth)
MCP_DEFAULT_USER_ID=

# CORS allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Better Auth URL
BETTER_AUTH_URL=http://localhost:3000
